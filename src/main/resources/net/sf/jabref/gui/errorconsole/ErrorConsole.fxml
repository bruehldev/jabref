<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<DialogPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.sf.jabref.gui.errorconsole.ErrorConsoleViewModel">
    <content>
        <BorderPane>
            <center>
                <TabPane prefHeight="500.0" prefWidth="1200.0" styleClass="info-sections" tabClosingPolicy="UNAVAILABLE"
                         BorderPane.alignment="CENTER">
                    <tabs>
                        <Tab text="%Log">
                            <content>
                                <ListView editable="false" items="${controller.logTabTextArea}"/>
                            </content>
                        </Tab>
                        <Tab text="%Exceptions">
                            <content>
                                <ListView editable="false" items="${controller.exceptionTabTextArea}"/>
                            </content>
                        </Tab>
                        <Tab text="%Output">
                            <content>
                                <ListView fx:id="output" editable="false" items="${controller.outputTabTextArea}"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </center>
            <bottom>
                <ButtonBar styleClass="custom-buttons" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                    <buttons>
                        <Button fx:id="closeButton" cancelButton="true" defaultButton="true" mnemonicParsing="false"
                                onAction="#closeErrorDialog" text="Ok" textAlignment="CENTER"/>
                        <Button fx:id="copyLogButton" mnemonicParsing="false" onAction="#copyLogErrorDialog"
                                text="Copy Log"/>
                    </buttons>
                </ButtonBar>
            </bottom>
        </BorderPane>
    </content>
</DialogPane>
